# FastAPI settings / FastAPI 설정
APP_NAME="Arbitrage Backend / 아비트리지 백엔드"
ENVIRONMENT=local
LOG_LEVEL=INFO

# Database / 데이터베이스
# Leave empty for SQLite (development) / 비워두면 SQLite (개발용)
# For PostgreSQL: postgresql+asyncpg://user:password@host:5432/database
DATABASE_URL=

# Security / 보안
# CRITICAL: Change this in production! Minimum 32 characters
# 중요: 프로덕션에서 반드시 변경! 최소 32자
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_MINIMUM_32_CHARS

# Engine tuning / 엔진 튜닝
MARKET_POLL_INTERVAL=3.0
MAX_SPREAD_BPS=50
SIMULATED_BASE_NOTIONAL=10000
SIMULATED_FEE_BPS=10

# Market connectors / 마켓 커넥터
ENABLE_PUBLIC_REST_SPOT=true
PUBLIC_REST_TIMEOUT=3.0
TRADING_SYMBOLS=["BTC/USDT","ETH/USDT","XRP/USDT"]
# Set to true to enable CCXT spot connectors / CCXT 현물 커넥터 사용 시 true로 설정
ENABLE_CCXT_SPOT=false
CCXT_SPOT_EXCHANGES=["binance","okx"]

# Perpetual futures connectors (for funding rate arbitrage) / 무기한 선물 커넥터 (펀딩비 차익거래용)
# Set to true to enable perpetual futures arbitrage / 무기한 선물 차익거래 활성화 시 true로 설정
ENABLE_PERP_CONNECTORS=false
ENABLE_BINANCE_PERP=false
ENABLE_BYBIT_PERP=false
ENABLE_HYPERLIQUID_PERP=false
ENABLE_BASE_PERP=false
MIN_OPEN_INTEREST_USD=100000

# Tether bot config / 테더봇 설정
TETHER_TOTAL_EQUITY_USD=100000
TETHER_BOT_CURVE=[[ -5.0, 1.0 ], [ -2.0, 0.7 ], [ -1.0, 0.5 ], [ 0.0, 0.2 ], [ 1.0, 0.05 ], [ 3.0, 0.0 ]]

# Exchange API keys (stored encrypted in database via UI)
# 거래소 API 키 (데이터베이스에 암호화되어 저장됨, UI를 통해 설정)
# These are NOT used directly - configure via API after deployment
# 직접 사용되지 않음 - 배포 후 API를 통해 설정
